                <datasource jta="true" jndi-name="java:jboss/datasources/PostgreDataSource" pool-name="PostgreDataSource" enabled="true" use-ccm="true">
                    <connection-url>${env.POSTGRES_CONNECTION}</connection-url>
                    <!--
                    <driver-class>org.postgresql.Driver</driver-class>
